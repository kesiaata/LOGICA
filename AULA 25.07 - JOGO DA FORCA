                                  CRIANDO JOGO DA FORCA

programa
{
	inclua biblioteca Texto --> tx
	cadeia palavra, letra, vetorPalavraSecreta[10], vetorLetraChutada[10]
	inteiro i, tam, pos, erro
	logico acertou = falso, ganhou = verdadeiro
	
	
	funcao inicio()
	{
	
		
escreva("Qual a palavra secreta: ")
		leia(palavra)
		tam = tx.numero_caracteres(palavra)

		para(i = 0; i < tam; i++){
			vetorPalavraSecreta[i] = tx.extrair_subtexto(palavra, i, i+1)
		}
		pos = 0
		para(i = 0; i < tam; i++){
		escreva("Digite uma letra: ")
		leia(letra)
			se(vetorPalavraSecreta[i] == letra){
					vetorLetraChutada[i] = letra
				}
			//enquanto((pos < tam) e (vetorPalavraSecreta[i] != letra)){
				//pos++
			//}
		}
		para(i = 0; i < tam; i++){
			escreva(vetorLetraChutada[i])
		}
	}
}


							SEGUNDA OPÇÃO

programa
{
	inclua biblioteca Texto --> tx
	cadeia palavra, letra, PalavraSecreta[10], LetraChutada[10]
	inteiro tam, pos, acertos, erros
	logico acertou, repetiu
	
	
	funcao inicio()
	{
		escreva("Qual a palavra secreta: ")
		leia(palavra)
		tam = tx.numero_caracteres(palavra)
		acertos = tam
		erros = 6

		para(pos = 0; pos < tam; pos++){
			PalavraSecreta[pos] = tx.extrair_subtexto(palavra, pos, pos+1)
		} limpa()

		//repetição do laço ate que se esgote as chances
		enquanto(acertos > 0 e erros > 0){
			//posição de acordo com o tamanho da letra
			para(pos = 0; pos < tam; pos++){
				LetraChutada[pos] = "*"
			}
			escreva("Você tem "+ erros+ " chances. Digite uma letra para a palavra ")
			para(pos = 0; pos < tam; pos++){
				escreva(LetraChutada[pos])
			}
			escreva(": ")
			leia(letra)

			acertou = falso
			repetiu = falso
			
			//verificar se a letra esta na palavra
			para(pos = 0; pos < tam; pos++){
				se(letra == PalavraSecreta[pos]){
					PalavraSecreta[pos] = PalavraSecreta[pos]
					se(LetraChutada[pos] == letra){
						repetiu = verdadeiro
					}
					senao{
						acertou = verdadeiro
						LetraChutada[pos] = letra
						acertos--
					}
				}
			}

			se(repetiu == verdadeiro){
				escreva("Você já escolheu esta letra!")
			}
			senao se(acertou == verdadeiro){
				escreva("Você acertou a letra!\n")
			}
			senao{
				erros--
				escreva("Você errou a letra!!\n")
			}
		}
		se(acertos == 0){
			escreva("Você descobriu a palavra: ")
			para(pos = 0; pos < tam; pos++){
			escreva(LetraChutada[pos])
			}
		}
		se(erros == 0){
			escreva("Você não descobriu a palavra!")
		}
	}
}

